extends layout

block header
  h1= title

block content

  form(action="/notes/note", method="post")
    div.input
      br
      span.label Titulo Nota
      br
      input(type="text", name="title")
      br
      span.label Nota
      br
      input(type='text', name="note")
      br
      span.label Estudiante
      br
      select(id='selectTutor', name="student_id")
          option(value=student._id) #{student.Name}
      br 
    div.actions
      input(type="submit", value="Enviar")
block sidebar
  h1
  p
    | Menu
  li
    a(href='/createStudent') Crear cuenta estudiante
  li
    a(href='/createTutor') Crear cuenta tutor
