extends layout

block content
  h1= title
  p Por favor llene cada una de las casillas para el #{title}
  form(action="/users/user", method="post")
    div.input
      br
      span.label User Name
      input(type="text", name="userName")
      br
      span.label User Password
      input(type="password", name="userPassword")
      br
      span.label User Email
      input(type="text", name="userEmail")
      br
    div.actions
      input(type="submit", value="Enviar")