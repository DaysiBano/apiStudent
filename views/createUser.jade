extends layout

block header
  h1= title

block content
  p Por favor llene cada una de las casillas para el #{title}
  form(action="/users/user", method="post")
    div.input
      br
      span.label User Name
      br
      input(type="text", name="userName")
      br
      span.label User Email
      br
      input(type="text", name="userEmail")
      br
      span.label User Password
      br
      input(type="password", name="userPassword")
      br
      select(id='userRol', name="userRol")
        option(value='user') Usuario
        option(value='admin') Administrador
      br
    div.actions
      input(type="submit", value="Enviar")
      
block sidebar
  h1
  p
    | Menu
  li
    a(href='/createStudent') Crear cuenta estudiante
  li
    a(href='/createTutor') Crear cuenta tutor