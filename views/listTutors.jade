extends layout

block header
  h1= title

block content
  script(src='./javascripts/main.js')
  div
  table(border='1')
    tr: #{title}
      th Identificacion
      th Codigo
      th Cantidad
      th Nombre
      th Cant Est
    each val, index in tutors
      tr
        td= index
        td= val.Ident
        td= val.Cod
        td= val.Name + ' ' + val.LastName
        td= val.CantStudents
        td
          a(href="/tutors/delete/" + val._id.toString()) Borrar
block sidebar
  h1
  p
    | Menu
  li
    a(href='/createStudent') Crear cuenta estudiante
  li
    a(href='/createTutor') Crear cuenta tutor
        
        
 