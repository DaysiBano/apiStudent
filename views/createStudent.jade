extends layout

block content
  h1= title
  p Por favor llene cada una de las casillas para el #{title}
  form(action="/students/student", method="post")
    div.input
      br
      span.label Nombre 
      input(type="text", name="studentName")
      br
      span.label Apellido 
      input(type="text", name="studentLastName")
      br
      span.label Correo electronico 
      input(type="text", name="studentEmail")
      br
      span.label Contrasena de estudiante
      input(type="password", name="studentPassword")
      br
      span.label Tutor del estudiante
      select(id='selectTutor', name="studentTutor")
        each val in tutors
          option(value=val._id) #{val.tutorName} #{val.tutorLastName}
      br
      span.label Periodo de estudiante
      input(type="text", name="studentPeriod")
      br
      span.label Creditos acumulados de estudiante
      input(type="number", name="studentCreditsAc")
      br
      span.label Codigo de estudiante
      input(type="number", name="studentCod")
      br
      span.label Numero Celular de estudiante
      input(type="number", name="studentPhone")
      br
      span.label Numero telefonico convencional de estudiante
      input(type="number", name="studentCellPhone")
      br
    div.actions
      input(type="submit", value="Enviar")